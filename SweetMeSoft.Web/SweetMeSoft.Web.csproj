<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <LangVersion>latest</LangVersion>
    <PackageId>SweetMeSoft.Web</PackageId>
    <Version>1.10.102</Version>
    <Authors>Erick Velasco</Authors>
    <Company>SweetMeSoft</Company>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Title>SweetMeSoft Web</Title>
    <Description>SweetMeSoft Web Library is a compilation of basic tools in TypeScript to use in Web Projects</Description>
    <Copyright>SweetMeSoft</Copyright>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="js\sweetmesoft\Ajax.d.ts" />
    <None Remove="js\sweetmesoft\Classes.d.ts" />
    <None Remove="js\sweetmesoft\Common.d.ts" />
    <None Remove="js\sweetmesoft\JQueryAddOns.d.ts" />
    <None Remove="js\sweetmesoft\Tools.d.ts" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="js\sweetmesoft\Ajax.d.ts">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="js\sweetmesoft\Classes.d.ts">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="js\sweetmesoft\Common.d.ts">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="js\sweetmesoft\JQueryAddOns.d.ts">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="js\sweetmesoft\Tools.d.ts">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="NuGet.Build" Version="2.12.1" />
    <PackageReference Include="NuGet.CommandLine" Version="6.5.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

</Project>
